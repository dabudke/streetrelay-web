// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type Session {
  id String @default(uuid())
}

model User {
  id           String     @id @map("_id")
  nickname     String
  mii          Bytes?
  starredBy    User[]     @relation("StarredUsers", fields: [starredByIDs], references: [id])
  starredByIDs String[]
  stars        Int        @default(0)
  starred      User[]     @relation("StarredUsers", fields: [starredIDs], references: [id])
  starredIDs   String[]
  tags         Int        @default(0)
  games        GameData[]

  @@map("users")
}

model GameData {
  id     String @id @map("_id") @default(auto()) @db.ObjectId
  user   User   @relation(fields: [userID], references: [id])
  userID String
  game   Game   @relation(fields: [gameID], references: [id])
  gameID String
  data   Bytes

  @@map("data")
}

model Game {
  id    String     @id @map("_id")
  title String
  icon  String     @default("https://via.placeholder.com/48.png")
  data  GameData[] @ignore

  @@map("games")
}
